<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="kassacompleet_error" name="KassaCompleet Error Page">
		<t t-call="website.layout">
			<div class="container">
  				<div class="row">
    				<div class="span12 text-center">
      					<div class="hero-unit center">
          					<h1>KassaCompleet: <small><t t-raw="error_msg"/></small></h1>
          					<br />
          					<p>The page you requested could not be found, either contact your webmaster or try again. Use your browsers <b>Back</b> button to navigate to the page you have prevously come from</p>
          					<p><b>Or you could just press this neat little button:</b></p>
          					<a href="/shop/payment" class="btn btn-large btn-info"><i class="fa fa-arrow-left" aria-hidden="true"></i>
 						Back to Payment</a>
        				</div>
    				</div>
  				</div>
			</div>	
		</t>
    </template>
</odoo>
