<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_ept" model="ir.ui.view">
        <field name="name">view_res.config.settings.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="webmaster_settings" position="after">                
                <h2>Order Comment</h2>
                <div class="row mt16 o_settings_container">
                	<div class="col-12 col-lg-6 o_setting_box" id="order_comment_setting">
                        <div class="o_setting_left_pane">
                            <field name="is_order_comment_feature" readonly="0"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_order_comment_feature"/>
                        </div>
                	</div>
                </div>
            </div>
        </field>
    </record>
</odoo>
