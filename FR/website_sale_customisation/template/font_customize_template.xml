<odoo>
	<!-- Added extra font into the theme customize option -->
	<template id="theme_customisation_fonts" inherit_id="website._assets_primary_variables">
        <xpath expr="//link" position="before">
            <link rel="stylesheet" type="text/scss"
				href="/website_sale_customisation/static/src/scss/fonts.scss" />
        </xpath>
    </template>
    
